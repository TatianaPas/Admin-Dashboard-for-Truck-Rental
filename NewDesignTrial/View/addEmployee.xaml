<UserControl x:Class="NewDesignTrial.View.addEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NewDesignTrial.View"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="625" Width="480">
    <Grid  Margin="5,5,5,5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Style="{StaticResource text}" Text="Full Name" Grid.Column="0"/>
        <TextBlock Style="{StaticResource text}" Text="Address" Grid.Row="1" Grid.Column="0"  />
        <TextBlock Style="{StaticResource text}" Text="Telephone" Grid.Row="2" Grid.Column="0"  />
        <TextBlock Style="{StaticResource text}" Text="Office Address" Grid.Row="3" Grid.Column="0"  />
        <TextBlock Style="{StaticResource text}" Text="Phone Extension" Grid.Row="4" Grid.Column="0" />
        <TextBlock Style="{StaticResource text}" Text="Role" Grid.Row="5" Grid.Column="0"   />
        <TextBlock Style="{StaticResource text}" Text="Username" Grid.Row="6" Grid.Column="0"  />
        <TextBlock Style="{StaticResource text}" Text="Password" Grid.Row="7" Grid.Column="0"  />
        <TextBox Name="nameTextBox" Style="{StaticResource inputTextBox}" Grid.Column="1" />
        <TextBox Name="addressTextBox" Style="{StaticResource inputTextBox}" Grid.Row="1" Grid.Column="1" />
        <TextBox Name="telephoneTextBox" Style="{StaticResource inputTextBox}" Grid.Row="2" Grid.Column="1" />
        <TextBox Name="officeAddressTextBox" Style="{StaticResource inputTextBox}" Grid.Row="3" Grid.Column="1" />
        <TextBox Name="phoneExtensionTextBox" Style="{StaticResource inputTextBox}" Grid.Row="4" Grid.Column="1" />
        <ComboBox Template="{DynamicResource ComboBoxTemplate1}" 
                  Name="roleComboBox" 
                  Grid.Row="5" 
                  Grid.Column="1"
                  MinHeight="35" 
                  Height="35"
                  Margin="5"
                  Padding="10">
            <ComboBoxItem Style="{StaticResource combobox ItemInput}" Content="staff" Cursor="Hand" IsSelected="True"/>
            <ComboBoxItem Style="{StaticResource combobox ItemInput}" Content="admin" Cursor="Hand"/>
        </ComboBox>
        <TextBox Name="usernameTextBox" Style="{StaticResource inputTextBox}" Grid.Row="6" Grid.Column="1" />
        <TextBox Name="passwordTextBox" Style="{StaticResource inputTextBox}" Grid.Row="7" Grid.Column="1" />
       

        <Button Grid.Row="8" Grid.Column="1" x:Name="addEmployeeBtn"
                        Style="{StaticResource submitButton}"
                        Content="Add Employee" Click="addEmployeeBtn_Click">
        </Button>
    </Grid>
</UserControl>
